---
import SkillCard from '../ui/SkillCard.astro';
---

<section id="habilidades" class="section-padding bg-gradient-to-b from-transparent to-gray-900/20 animate-on-scroll">
  <div class="container mx-auto px-6">
    <h2 class="section-title text-4xl font-bold text-center mb-16 gradient-text">
      Habilidades
    </h2>
    
    <div class="skills-grid grid md:grid-cols-3 gap-8">
      <div class="skill-category animate-on-scroll">
        <h3 class="text-2xl font-semibold mb-6 text-center text-blue-400">Front-end</h3>
        <div class="skills-list stagger-container">
          <SkillCard name="React" level="95" icon="⚛️" />
          <SkillCard name="Vite" level="90" icon="⚡" />
          <SkillCard name="Tailwind CSS" level="92" icon="🎨" />
          <SkillCard name="Three.js" level="85" icon="🎲" />
          <SkillCard name="Next.js" level="88" icon="▲" />
        </div>
      </div>
      
      <div class="skill-category animate-on-scroll">
        <h3 class="text-2xl font-semibold mb-6 text-center text-purple-400">Inmersivo</h3>
        <div class="skills-list stagger-container">
          <SkillCard name="Unity" level="90" icon="🎮" />
          <SkillCard name="Unreal Engine" level="80" icon="🚀" />
          <SkillCard name="MindAR" level="85" icon="🧠" />
          <SkillCard name="AR Foundation" level="82" icon="📱" />
          <SkillCard name="WebXR" level="78" icon="🥽" />
        </div>
      </div>
      
      <div class="skill-category animate-on-scroll">
        <h3 class="text-2xl font-semibold mb-6 text-center text-green-400">Herramientas</h3>
        <div class="skills-list stagger-container">
          <SkillCard name="Git" level="93" icon="📝" />
          <SkillCard name="Figma" level="87" icon="🎨" />
          <SkillCard name="Blender" level="75" icon="🎭" />
          <SkillCard name="Docker" level="80" icon="🐳" />
          <SkillCard name="AWS" level="70" icon="☁️" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills-grid {
    position: relative;
  }

  .skill-category {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .skill-category:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 212, 255, 0.1);
  }
</style>
