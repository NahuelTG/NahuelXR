<style>
   .section-padding {
      padding: 100px 0;
   }

   .section-title {
      position: relative;
   }

   .section-title::after {
      content: "";
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 3px;
      background: linear-gradient(90deg, #00d4ff, #ff6b6b);
      border-radius: 2px;
   }

   .image-container {
      position: relative;
   }

   .image-container::before {
      content: "";
      position: absolute;
      top: -20px;
      left: -20px;
      right: 20px;
      bottom: 20px;
      background: linear-gradient(45deg, #00d4ff, #ff6b6b);
      border-radius: 2rem;
      z-index: -1;
      opacity: 0.3;
      animation: pulse 3s ease-in-out infinite;
   }

   @keyframes pulse {
      0%,
      100% {
         transform: scale(1);
         opacity: 0.3;
      }
      50% {
         transform: scale(1.05);
         opacity: 0.5;
      }
   }

   .specialty-icon {
      transition: all 0.3s ease;
   }

   .specialties-grid .card:hover .specialty-icon {
      transform: scale(1.1) rotate(5deg);
   }

   /* Responsive design */
   @media (max-width: 768px) {
      .personal-stats {
         grid-template-columns: 1fr;
         gap: 1rem;
      }

      .about-actions {
         flex-direction: column;
      }

      .about-image .card {
         position: relative;
         margin: 1rem 0;
      }

      .specialties-grid {
         grid-template-columns: 1fr;
         gap: 1rem;
      }
   }
</style>
