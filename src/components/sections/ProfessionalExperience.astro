   }

   .achievement-list li:hover {
      transform: translateX(5px);
      color: white;
   }

   .section-title::after {
      content: "";
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 120px;
      height: 3px;
      background: linear-gradient(90deg, #3b82f6, #8b5cf6);
      border-radius: 2px;
   }

   .experience-section {
      position: relative;
   }

   .experience-section::before {
      content: "";
