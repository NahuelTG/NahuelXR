   }

   .achievement-list li:hover {
      transform: translateX(5px);
      color: white;
   }

   .section-title::after {
      content: "";
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 120px;
      height: 3px;
