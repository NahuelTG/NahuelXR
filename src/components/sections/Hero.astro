   <!-- Scroll indicator solo en desktop -->
   <div class="hero-scroll-indicator absolute bottom-10 left-1/2 transform -translate-x-1/2 hidden md:block">
      <div class="scroll-arrow"></div>
   </div>
</section>

<style>
   .hero-section {
      background: radial-gradient(ellipse at center, rgba(0, 212, 255, 0.1) 0%, transparent 70%);
      padding: 2rem 0;
   }

   .hero-content {
      max-width: 100%;
      margin: 0 auto;
   }

   .hero-title {
      text-shadow: 0 0 30px rgba(0, 212, 255, 0.5);
      line-height: 1.1;
      word-break: break-word;
      hyphens: auto;
   }

   /* Animación typewriter responsive */
   .hero-subtitle {
      overflow: hidden;
      border-right: 3px solid #00d4ff;
      white-space: nowrap;
      animation:
         typewriter 3s steps(40) 1s forwards,
         blink 1s infinite;
      width: 0;
      max-width: 100%;
      margin: 0 auto;
   }

   @keyframes typewriter {
      to {
         width: 100%;
      }
   }

   @keyframes blink {
      0%,
      50% {
         border-color: #00d4ff;
      }
      51%,
      100% {
         border-color: transparent;
      }
   }

   .social-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(0, 212, 255, 0.3);
      border-radius: 50%;
      color: #00d4ff;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px);
      flex-shrink: 0;
   }

   .social-link:hover {
      background: rgba(0, 212, 255, 0.1);
      border-color: #00d4ff;
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 8px 16px rgba(0, 212, 255, 0.3);
   }

   .scroll-arrow {
      width: 2px;
      height: 30px;
      background: #00d4ff;
      position: relative;
      animation: scrollBounce 2s infinite;
   }

   .scroll-arrow::after {
      content: "";
      position: absolute;
      bottom: -5px;
      left: -3px;
      width: 8px;
      height: 8px;
      border-right: 2px solid #00d4ff;
      border-bottom: 2px solid #00d4ff;
      transform: rotate(45deg);
   }

   @keyframes scrollBounce {
      0%,
      100% {
         transform: translateY(0);
         opacity: 1;
      }
      50% {
         transform: translateY(10px);
         opacity: 0.5;
      }
   }

   /* Morfing shape responsivo */
   .morphing-shape {
      width: 80px;
      height: 80px;
      background: linear-gradient(45deg, #00d4ff, #ff6b6b);
      animation: morph 8s ease-in-out infinite;
   }

   @keyframes morph {
      0%,
      100% {
         border-radius: 50% 50% 50% 50%;
         transform: rotate(0deg) scale(1);
      }
      25% {
         border-radius: 60% 40% 30% 70%;
         transform: rotate(90deg) scale(1.1);
      }
      50% {
         border-radius: 30% 60% 70% 40%;
         transform: rotate(180deg) scale(0.9);
      }
      75% {
         border-radius: 40% 30% 60% 50%;
         transform: rotate(270deg) scale(1.05);
      }
   }

   /* Responsive breakpoints detallados */

   /* Mobile Portrait (320px - 479px) */
   @media (max-width: 479px) {
      .hero-section {
         padding: 1rem 0;
         min-height: 100vh;
      }

      .hero-content {
         padding: 0 1rem;
      }

      .hero-description {
         padding: 0;
      }

      .hero-buttons {
         gap: 0.75rem;
      }

      .social-link {
         width: 36px;
         height: 36px;
      }
   }

   /* Mobile Landscape (480px - 767px) */
   @media (min-width: 480px) and (max-width: 767px) {
      .hero-section {
         padding: 1.5rem 0;
      }

      .social-link {
         width: 42px;
         height: 42px;
      }
   }

   /* Tablet (768px - 1023px) */
   @media (min-width: 768px) and (max-width: 1023px) {
      .hero-section {
         padding: 2rem 0;
      }

      .social-link {
         width: 44px;
         height: 44px;
      }

      .morphing-shape {
         width: 100px;
         height: 100px;
         top: 10rem;
         right: 2rem;
      }
   }

   /* Desktop (1024px+) */
   @media (min-width: 1024px) {
      .social-link {
         width: 48px;
         height: 48px;
      }

      .social-link:hover {
         transform: translateY(-5px) scale(1.1);
         box-shadow: 0 10px 20px rgba(0, 212, 255, 0.3);
      }

      .morphing-shape {
         width: 120px;
         height: 120px;
      }
   }

   /* Ultra wide screens */
   @media (min-width: 1400px) {
      .hero-content {
         max-width: 1200px;
      }
   }

   /* Fix para prevenir overflow horizontal */
   .hero-section * {
      max-width: 100%;
      box-sizing: border-box;
   }

   /* Ajuste específico para animación typewriter en móvil */
   @media (max-width: 640px) {
      .hero-subtitle {
         font-size: 1rem;
         line-height: 1.4;
      }
   }
</style>
